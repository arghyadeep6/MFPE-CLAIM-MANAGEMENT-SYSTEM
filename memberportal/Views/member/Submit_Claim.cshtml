@model memberportal.Models.memberclaim

@{
    ViewData["Title"] = "SubmitClaim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 align="center">SUBMIT YOUR CLAIM HERE</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Submit_Claim">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="billedamount" class="control-label"></label>
                <input asp-for="billedamount" class="form-control" />
                <span asp-validation-for="billedamount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="claimedamount" class="control-label"></label>
                <input asp-for="claimedamount" class="form-control" />
                <span asp-validation-for="claimedamount" class="text-danger"></span>
            </div>
            <div class="form-group col-md-auto">
                <label asp-for="benefitid" class="control-lable"></label>
                <select asp-for="benefitid" class="custom-select">
                    <option value="">Choose suitable benefit</option>
                    <option value="0">None</option>
                    <option value="1">Ambulance charge</option>
                    <option value="2">Medical charge</option>
                    <option value="3">Operation charge</option>
                    <option value="4">Staying charge</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit Claim" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
